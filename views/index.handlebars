<section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">NodeJs Blog</h1>
        <p class="lead text-muted">This is a simple blog created using NodeJs, Express, and MongoDB. Enjoy!</p>
        <p>
          <a href="/users/register" class="btn btn-primary my-2">Create a free account</a>
          <a href="/users/login" class="btn btn-secondary my-2">Login</a>
        </p>
      </div>
    </div>
  </section>

<hr>


  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

{{#each posts}}

        <div class="col">
          <div class="card shadow-sm">
            <a href="/post/{{slug}}"><svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/></svg></a>

            <div class="card-body">
              
              <h4>{{title}}</h4>
              <p class="card-text" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{subtitle}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a class="btn btn-sm btn-outline-secondary" href="/post/{{slug}}">Read</a>
                  <a class="btn btn-sm btn-outline-secondary" href="">Share</a>
                </div>
                <small class="text-muted">{{read_time}}</small>
              </div>
            </div>
          </div>
        </div>

{{else}}

{{/each}}

      </div>
    </div>
  </div>