<h2>Your Posts:</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">New post</button></a>

{{#each posts}}

	<div class="card mt-3">
		<div class="card-body">
			<div class="row">
				<div class="col-10">
					<h4>{{title}}</h4>
					<p>Subtitle: {{subtitle}}</p>
					<small>Date: {{date}}</small>
					<br>
					<small>Category: {{category.name}}</small>
				</div>
				<div class="col-1 align-self-center">
					<a href="/admin/posts/edit/{{_id}}"><button class="btn btn-success"><i class="bx bx-edit"></i></button></a>
				</div>
				<div class="col-1 align-self-center">
					<form action="/admin/posts/delete/{{_id}}" method="post">
						<input type="hidden" name="id" value="{{_id}}">
						<button type="submit" class="btn btn-danger"><i class='bx bx-trash'></i></button>
					</form>
				</div>
			</div>

		</div>
	</div>

{{else}}

	<h3>Nothing to show... Try adding some post!</h3>

{{/each}}