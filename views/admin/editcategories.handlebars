{{#each errors}}

	<div class="alert alert-danger">{{text}}</div>

{{else}}

{{/each}}

<h2 class="mb-3">Edit category</h2>

<div class="card">
	<div class="card-body">
		<form action="/admin/categories/edit" method="POST">
			<input type="hidden" name="id" value="{{category._id}}">		
			<label for="name">Name:</label>
				<input type="text" name="name" id="name" placeholder="New category's name" class="form-control" value="{{category.name}}">
			<label for="slug" class="mt-3">Slug:</label>
				<input type="text" name="slug" id="slug" placeholder="Category's slug" class="form-control" value='{{category.slug}}'>
			<button type="submit" class="btn btn-success mt-3">Edit category</button>
		</form>
	</div>
	
</div>
